<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".OptionsMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options Menu"
        android:layout_marginBottom="24dp" />

    <Button
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:text="COMPAT ACTIVITY"
        android:layout_marginBottom="24dp"
        android:onClick="gotoOptionsMenuCompat" />

    <Button
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:text="FRAGMENT ACTIVITY"
        android:layout_marginBottom="24dp"
        android:onClick="gotoOptionsMenuFragment" />

    <Button
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:text="FULL SCREEN"
        android:layout_marginBottom="24dp"
        android:onClick="gotoOptionsMenuFullScreen" />

</LinearLayout>